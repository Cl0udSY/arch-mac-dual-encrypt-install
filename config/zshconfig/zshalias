# Alias

alias edal="vim ~/.zshalias && source ~/.zshalias" # Edit alias file
alias l="ls -lFh"
alias la="ls -alFh"
alias rmd="rm -rf"
alias cpd="cp -r"
alias da="cat $HOME/.zshalias"
alias killdiscord='ps aux | grep discord | cut -d" " -f7 | xargs kill -9'
alias shutdown="systemctl poweroff"
alias xclipt="xclip -selection clipboard"
alias rootme="cd $HOME/Security/Challs/RootMe/"
function clip()
{
	cat $1 | xclip
}
alias enbrcm="sed -i -e 's/blacklist brcmfmac/#blacklist brcmfmac' /usr/lib/modprobe.d/broadcom-wl.conf"

# Systemctl alias
alias startdocker="sudo systemctl start docker"
alias stopdocker="sudo systemctl stop docker"

# Alias sudo pacman
alias pacman="sudo pacman"

# Alias tools
alias vsc="codium --user-data-dir '$HOME/VSC'"
alias open="gio open"

# Alias tools secu
alias dtl="ls -lFh $HOME/Security/Tools/appLinks"
alias decpy="uncompyle6"
alias ran="rabin2 -I"
